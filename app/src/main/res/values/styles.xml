<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_txt_location">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/txt_locationbackground</item>
        <item name="android:drawableStart">@drawable/ic_locpin</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_nav_btns">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/bahnscrift</item>
    </style>

    <style name="style_cardview_info">
        <item name="cardCornerRadius">15dp</item>
        <item name="android:layout_width">338dp</item>
        <item name="android:layout_height">364dp</item>
        <item name="android:elevation">15dp</item>
    </style>

</resources>
